
# Contributor: Christine Dodrill <me@christine.website>
# Maintainer: Christine Dodrill <me@christine.website>
_gopkg=github.com/Xe/ln
_goimport=ln

pkgname=go-github-com-xe-ln
pkgver=0.1
pkgrel=0
pkgdesc="The natural logger function"
url="https://github.com/Xe/ln"
arch="noarch"
license="bsd-2"
depends="go gopath "
makedepends="go-github-com-pkg-errors"
install=""
source="$_goimport-$pkgver.tar.gz::https://github.com/Xe/ln/archive/v0.1.tar.gz"
builddir="$srcdir/"

build() {
        cd "$builddir"
}

package() {
        cd "$builddir"
        mkdir -p "$pkgdir"/usr/share/gopath/src/"$_gopkg"
        cp -rf "$_goimport"-"$pkgver"/* "$pkgdir"/usr/share/gopath/src/"$_gopkg"
}

check() {
        cd "$builddir"
        export GOPATH="$builddir":/usr/share/gopath

        mkdir -p src/"$_gopkg"
        cp -rf $_goimport-"$pkgver"/* src/"$_gopkg"
        go test -v "$_gopkg"
}
sha512sums="3e1350efdadf33b1633b5717859d3401b523d2c50388c6f35b17fbd6cc9b8b2de71c35aa60ec5d25a8008cd33f2c397ad7448a95c1c5266779973d3e73e2f7b3  ln-0.1.tar.gz"
