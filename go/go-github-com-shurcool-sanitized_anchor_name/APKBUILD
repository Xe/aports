_gopkg=github.com/shurcooL/sanitized_anchor_name
_goimport=sanitized_anchor_name
_commit=86672fcb3f950f35f2e675df2240550f2a50762f

pkgname=go-github-com-shurcool-sanitized_anchor_name
pkgver=1.0.0
pkgrel=0
pkgdesc="Package sanitized_anchor_name provides a func to create sanitized anchor names"
url="https://github.com/shurcooL/sanitized_anchor_name"
arch="noarch"
license="mit"
depends="go gopath "
makedepends=""
install=""
source="$_goimport-$pkgver.tar.gz::https://github.com/shurcooL/sanitized_anchor_name/archive/$_commit.tar.gz"
builddir="$srcdir/"

build() {
        cd "$builddir"
}

package() {
        cd "$builddir"
        mkdir -p "$pkgdir"/usr/share/gopath/src/"$_gopkg"
        cp -rf "$_goimport"-"$_commit"/* "$pkgdir"/usr/share/gopath/src/"$_gopkg"
}

check() {
        cd "$builddir"
        export GOPATH="$builddir"

        mkdir -p src/"$_gopkg"
        cp -rf $_goimport-"$_commit"/* src/"$_gopkg"
        go test -v "$_gopkg"/...
}
sha512sums="1d53a83a293157ea42d4e1c7a1eb30c87eaa32cdc88521ebcfa3f94fa4ddcf35d1b839a16ccd00043ee59c113596d5048f88e5cf5f9e6ce6003c9d8faf837ad0  sanitized_anchor_name-1.0.0.tar.gz"
