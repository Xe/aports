# Contributor:
# Maintainer:
pkgname=gopath
pkgver=1.0
pkgrel=0
pkgdesc="shared GOPATH for system level dependencies"
url="https://github.com/Xe/aports"
arch="noarch"
license="cc0"
depends="go"
makedepends=""
install=""
source="README"
builddir="$srcdir/"

build() {
	cd "$builddir"
}

package() {
	cd "$builddir"
	mkdir -p "$pkgdir"/usr/share/gopath
	cp -vrf "$srcdir"/README "$pkgdir"/usr/share/gopath/README
}

