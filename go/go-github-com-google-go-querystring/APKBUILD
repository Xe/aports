_gopkg=github.com/google/go-querystring
_goimport=go-querystring
_commit=53e6ce116135b80d037921a7fdd5138cf32d7a8a

pkgname=go-github-com-google-go-querystring
pkgver=0.0.1
pkgrel=0
pkgdesc="go-querystring is Go library for encoding structs into URL query parameters."
url="https://github.com/google/go-querystring"
arch="noarch"
license="mit"
depends="go gopath "
makedepends=""
install=""
source="$_goimport-$pkgver.tar.gz::https://github.com/google/go-querystring/archive/$_commit.tar.gz"
builddir="$srcdir/"

build() {
        cd "$builddir"
}

package() {
        cd "$builddir"
        mkdir -p "$pkgdir"/usr/share/gopath/src/"$_gopkg"
        cp -rf "$_goimport"-"$_commit"/* "$pkgdir"/usr/share/gopath/src/"$_gopkg"
}

check() {
        cd "$builddir"
        export GOPATH="$builddir"

        mkdir -p src/"$_gopkg"
        cp -rf $_goimport-"$_commit"/* src/"$_gopkg"
        go test -v "$_gopkg"/...
}
sha512sums="18830dbf6e14eb7757f7bdee1405e278b6c966fc7632be3decf34ea947705d66f8c0def8060371aa1e3c90cee7ca4324e67d9926627243f987281db52ffa2bca  go-querystring-0.0.1.tar.gz"
