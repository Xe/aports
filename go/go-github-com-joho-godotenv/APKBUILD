
# Contributor: Christine Dodrill <me@christine.website>
# Maintainer: Christine Dodrill <me@christine.website>
_gopkg=github.com/joho/godotenv
_goimport=godotenv

pkgname=go-github-com-joho-godotenv
pkgver=1.2.0
pkgrel=0
pkgdesc="loads environment variables from '.env'"
url="https://github.com/joho/godotenv"
arch="noarch"
license="mit"
depends="go gopath "
makedepends=""
install=""
source="$_goimport-$pkgver.tar.gz::https://github.com/joho/godotenv/archive/v1.2.0.tar.gz"
builddir="$srcdir/"

build() {
        cd "$builddir"
}

package() {
        cd "$builddir"
        mkdir -p "$pkgdir"/usr/share/gopath/src/"$_gopkg"
        cp -rf "$_goimport"-"$pkgver"/* "$pkgdir"/usr/share/gopath/src/"$_gopkg"
}

check() {
        cd "$builddir"
        export GOPATH="$builddir"

        mkdir -p src/"$_gopkg"
        cp -rf $_goimport-"$pkgver"/* src/"$_gopkg"
        go test -v "$_gopkg"/...
}
sha512sums="fc5df01d7c73ba3979b0a9abedf915460ea37f6e9e722bc9e16172fab368d31501f779cf2250d99cffdcc0c8932056f6c7c38d86fba90f762911b2cf2bbe260d  godotenv-1.2.0.tar.gz"
