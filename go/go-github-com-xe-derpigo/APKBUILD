
# Contributor: Christine Dodrill <me@christine.website>
# Maintainer: Christine Dodrill <me@christine.website>
_gopkg=github.com/Xe/derpigo
_goimport=derpigo

pkgname=go-github-com-xe-derpigo
pkgver=1.0.3
pkgrel=0
pkgdesc="Derpibooru API bindings in Go"
url="https://github.com/Xe/derpigo"
arch="noarch"
license="mit"
depends="go gopath "
makedepends=""
install=""
source="$_goimport-$pkgver.tar.gz::https://github.com/Xe/derpigo/archive/1.0.3.tar.gz"
builddir="$srcdir/"

build() {
        cd "$builddir"
}

package() {
        cd "$builddir"
        mkdir -p "$pkgdir"/usr/share/gopath/src/"$_gopkg"
        cp -rf "$_goimport"-"$pkgver"/* "$pkgdir"/usr/share/gopath/src/"$_gopkg"
}

check() {
        cd "$builddir"
        export GOPATH="$builddir"

        mkdir -p src/"$_gopkg"
        cp -rf $_goimport-"$pkgver"/* src/"$_gopkg"
        go test -v "$_gopkg"/...
}
sha512sums="c3107851aa6347a39ae83b9bf1654da094b4c18bf13c1072a287071f3a48fb01119056e38899cab69e1216159717567b84bfdd7f0b5af19418be47579580c848  derpigo-1.0.3.tar.gz"
