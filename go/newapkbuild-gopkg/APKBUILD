# Contributor:
# Maintainer:
pkgname=newapkbuild-gopkg
pkgver=1.0
pkgrel=1
pkgdesc="a simple command line tool to generate APKGUILD files for Go packages in the go repo"
url="https://github.com/Xe/aports"
arch="all"
license="cc0"
depends=""
makedepends="go"
install=""
source="main.go"
builddir="$srcdir/"

build() {
	cd "$builddir"
	go build -o "$pkgname" main.go
}

package() {
	cd "$builddir"

	install -D -m 755 "$pkgname" "$pkgdir"/usr/bin/"$pkgname"
}

sha512sums="3da40d209e340048ccd66d584dfbb4b21b363c7ab7f132e540dc744a1a6b0ebd1a5854c1e320632f57a24893369f23302520afb54f939df44314131655ca4324  main.go"
