
# Contributor: Christine Dodrill <me@christine.website>
# Maintainer: Christine Dodrill <me@christine.website>
_gopkg=github.com/intel/tfortools
_goimport=tfortools

pkgname=go-github-com-intel-tfortools
pkgver=0.1.0
pkgrel=0
pkgdesc="Templates for Tools (tfortools) makes it easier to add template scripting to tools."
url="https://github.com/intel/tfortools"
arch="noarch"
license="apache-2"
depends="go gopath "
makedepends=""
install=""
source="$_goimport-$pkgver.tar.gz::https://github.com/intel/tfortools/archive/v0.1.0.tar.gz"
builddir="$srcdir/"

build() {
        cd "$builddir"
}

package() {
        cd "$builddir"
        mkdir -p "$pkgdir"/usr/share/gopath/src/"$_gopkg"
        cp -rf "$_goimport"-"$pkgver"/* "$pkgdir"/usr/share/gopath/src/"$_gopkg"
}

check() {
        cd "$builddir"
        export GOPATH="$builddir"

        mkdir -p src/"$_gopkg"
        cp -rf $_goimport-"$pkgver"/* src/"$_gopkg"
        go test -v "$_gopkg"/...
}
sha512sums="6b6a927bfb5c89d36135ba953a1f1daf13c793f221c294cc84af87398259952b4c3b31a681d9915df6020aa2d797de9b9f5d66970f698bfecbf384867b6e6e44  tfortools-0.1.0.tar.gz"
