
# Contributor: Christine Dodrill <me@christine.website>
# Maintainer: Christine Dodrill <me@christine.website>
_gopkg=github.com/russross/blackfriday
_goimport=blackfriday

pkgname=go-github-com-russross-blackfriday
pkgver=2.0.0
pkgrel=1
pkgdesc="a markdown processor for Go"
url="https://github.com/russross/blackfriday"
arch="noarch"
license="bsd-2"
depends="go gopath go-github-com-shurcool-sanitized_anchor_name"
makedepends="go-github-com-shurcool-sanitized_anchor_name"
install=""
source="$_goimport-$pkgver.tar.gz::https://github.com/russross/blackfriday/archive/v2.0.0.tar.gz"
builddir="$srcdir/"

build() {
        cd "$builddir"
}

package() {
        cd "$builddir"
        mkdir -p "$pkgdir"/usr/share/gopath/src/"$_gopkg"
        cp -rf "$_goimport"-"$pkgver"/* "$pkgdir"/usr/share/gopath/src/"$_gopkg"
}

check() {
        cd "$builddir"
        export GOPATH="$builddir":/usr/share/gopath

        mkdir -p src/"$_gopkg"
        cp -rf $_goimport-"$pkgver"/* src/"$_gopkg"
        go test -v "$_gopkg"/...
}
sha512sums="a1b260f47f4ab518e96eac063c726fdefecf769c8702279a6979ae8fbc382569975107d6a4782bd9abfa7d3bf8c7ae7f0533784c5f68bdf43bdf84be4f64ce14  blackfriday-2.0.0.tar.gz"
