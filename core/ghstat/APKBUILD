# Contributor: Christine Dodrill <me@christine.website>
# Maintainer: ""
pkgname=ghstat
pkgver=0.0.1
pkgrel=1
pkgdesc="Github status getter"
url="https://github.com/Xe/tools"
arch="all"
license="MIT"
depends=""
makedepends="go"
install=""
subpackages=""
source=""
builddir="$srcdir/"

build() {
	cd "$builddir"

	export GOPATH="$builddir"
	go get github.com/Xe/x/tools/ghstat
	go build github.com/Xe/x/tools/ghstat
}

package() {
	cd "$builddir"

	install -D -m 755 "$builddir"/$pkgname "$pkgdir"/usr/bin/$pkgname
}

