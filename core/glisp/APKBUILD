# Contributor: Christine Dodrill <me@christine.website>
# Maintainer: ""
pkgname=glisp
pkgver=0.4.0
pkgrel=0
pkgdesc="Lisp in Go"
url="https://github.com/zhemao/glisp"
arch="all"
license="MIT"
depends=""
makedepends="go"
install=""
subpackages=""
source=""
builddir="$srcdir/"

build() {
	cd "$builddir"

	export GOPATH="$builddir"
	go get github.com/zhemao/glisp
	go build github.com/zhemao/glisp
}

package() {
	cd "$builddir"

	install -D -m 755 "$builddir"/$pkgname "$pkgdir"/usr/bin/$pkgname
}

