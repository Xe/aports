# Contributor: Christine Dodrill <me@christine.website>
# Maintainer: ""
pkgname=glue
pkgver=0.0.1
pkgrel=0
pkgdesc="Glue things together with Lua"
url="https://github.com/Xe/tools"
arch="all"
license="MIT"
depends=""
makedepends="go"
install=""
subpackages=""
source=""
builddir="$srcdir/"

build() {
	cd "$builddir"

	export GOPATH="$builddir"
	go get github.com/Xe/tools/glue/...
	go build github.com/Xe/tools/glue
}

package() {
	cd "$builddir"

	install -D -m 755 "$builddir"/$pkgname "$pkgdir"/usr/bin/$pkgname
}

