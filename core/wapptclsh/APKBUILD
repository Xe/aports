# Contributor:
# Maintainer:
pkgname=wapptclsh
pkgver=0.0.0
pkgrel=0
pkgdesc="A framework for writing web applications in TCL"
url="https://wapp.tcl.tk/index.html/doc/trunk/README.md"
arch="all"
license="bsd2"
depends="tcl"
makedepends="tcl-dev"
install=""
subpackages=""
source="
	https://wapp.tcl.tk/index.html/tarball/wapp.tar.gz
	Makefile
	"
builddir="$srcdir/"

build() {
	cd "$builddir"
	cp Makefile wapp
	cd wapp
	make
}

package() {
	cd "$builddir"

	install -D -m 755 "$builddir"/wapp/$pkgname "$pkgdir"/usr/bin/$pkgname
}

