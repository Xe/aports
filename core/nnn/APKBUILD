# Contributor:
# Maintainer:
pkgname=nnn
pkgver=2.0
pkgrel=0
pkgdesc="Terminal file manager"
url="https://github.com/jarun/nnn"
arch="all"
license="bsd2"
depends="ncurses"
makedepends="ncurses-dev"
subpackages="$pkgname-doc"
install=""
source="https://github.com/jarun/nnn/releases/download/v2.0/nnn-v2.0.tar.gz"
builddir="$srcdir/"

build() {
	cd "$builddir/nnn"
	make
}

check() {
	cd "$builddir/nnn"
	true
}

package() {
	cd "$builddir/nnn"
	make DESTDIR="$pkgdir" PREFIX="/usr" install
}

