pkgname=mage
pkgver=2
pkgrel=0
pkgdesc="make/rake like utility for Go"
url="https://magefile.org/"
arch="x86_64"
license="apache-2"
depends="go"
makedepends=""
install=""
source="
	mage-$pkgver.tar.gz::https://github.com/magefile/mage/releases/download/v2/mage_2_Linux-64bit.tar.gz
"
builddir="$srcdir/"

build() {
	cd "$builddir"
}

package() {
	cd "$builddir"
	install -D -m 755 "$srcdir"/$pkgname "$pkgdir"/usr/bin/$pkgname
}

sha512sums="c39d504f2464791bc21762a4c8ef2513de410d344f0ac79e98b9ef7f33e64a12338471a6fcc30c6a240e6ce863467e34c472e4eb5b89a539726c90313e29098d  mage-2.tar.gz"
