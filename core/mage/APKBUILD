pkgname=mage
pkgver=2.0.1
pkgrel=0
pkgdesc="make/rake like utility for Go"
url="https://magefile.org/"
arch="x86_64"
license="apache-2"
depends="go"
makedepends=""
install=""
source="
	mage-$pkgver.tar.gz::https://github.com/magefile/mage/releases/download/v${pkgver}/mage_${pkgver}_Linux-64bit.tar.gz
"
builddir="$srcdir/"

build() {
	cd "$builddir"
}

package() {
	cd "$builddir"
	install -D -m 755 "$srcdir"/$pkgname "$pkgdir"/usr/bin/$pkgname
}

sha512sums="5cadb5e18344ca7651d43c60f5412b43ea60e56cb627086824fce52fcbe837786d2e8516b81a6ac039396308ccab37c853dc5f698f70780268f520dd3a75ccaa  mage-2.0.1.tar.gz"
