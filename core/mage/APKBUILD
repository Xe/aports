pkgname=mage
pkgver=1.0.2
pkgrel=0
pkgdesc="make/rake like utility for Go"
url="https://magefile.org/"
arch="x86_64"
license="apache-2"
depends="go"
makedepends=""
install=""
source="
	mage.tar.gz::https://github.com/magefile/mage/releases/download/v1.0.2/mage_1.0.2_Linux-64bit.tar.gz
"
builddir="$srcdir/"

build() {
	cd "$builddir"
}

package() {
	cd "$builddir"
	install -D -m 755 "$srcdir"/$pkgname "$pkgdir"/usr/bin/$pkgname
}

sha512sums="05472f00b9d74383b907423d96c595ccf36ec2e6da27b7c845a63fd3c5cc6ee206ba7ab02f3defa59e150b98ea42d67b10b38f0b1231df28966c3db27c62d8fc  mage.tar.gz"
