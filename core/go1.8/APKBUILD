# Contributor:
# Maintainer:
pkgname=go1.8
pkgver=0
pkgrel=0
pkgdesc="Go 1.8 wrapper binary"
url="https://golang.org"
arch="all"
license="BSD"
depends=""
makedepends="go"
install=""
subpackages=""
source=""
builddir="$srcdir/"

build() {
	cd "$builddir"

	export GOPATH="$builddir"
	go get github.com/Xe/x/version/go1.8
	go build github.com/Xe/x/version/go1.8
}

package() {
	cd "$builddir"

	install -D -m 755 "$builddir"/$pkgname "$pkgdir"/usr/bin/$pkgname
}

