# Contributor: Christine Dodrill <me@christine.website>
# Maintainer: ""
pkgname=todo
pkgver=0.0.1
pkgrel=0
pkgdesc="Simple todo manager"
url="https://github.com/mattn/todo"
arch="all"
license="MIT"
depends=""
makedepends="go"
install=""
subpackages=""
source=""
builddir="$srcdir/"

build() {
	cd "$builddir"

	export GOPATH="$builddir"
	go get github.com/mattn/todo
	go build github.com/mattn/todo
}

package() {
	cd "$builddir"

	install -D -m 755 "$builddir"/$pkgname "$pkgdir"/usr/bin/$pkgname
}

