# Contributor: Christine Dodrill <me@christine.website>
# Maintainer: ""
pkgname=quickserv
pkgver=0.0.1
pkgrel=1
pkgdesc="Simple HTTP server for one-off directory sharing"
url="https://github.com/Xe/tools"
arch="all"
license="MIT"
depends=""
makedepends="go"
install=""
subpackages=""
source=""
builddir="$srcdir/"

build() {
	cd "$builddir"

	export GOPATH="$builddir"
	go get github.com/Xe/x/tools/quickserv
	go build github.com/Xe/x/tools/quickserv
}

package() {
	cd "$builddir"

	install -D -m 755 "$builddir"/$pkgname "$pkgdir"/usr/bin/$pkgname
}

